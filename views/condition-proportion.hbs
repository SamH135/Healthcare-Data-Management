<div class="container-fluid d-flex flex-column vh-100">
    <h2>Condition Proportion</h2>
    <div class="row flex-grow-1">
        <div class="col-12">
            <div class="card h-100">
                <div class="card-body d-flex">
                    <div class="form-container flex-shrink-0 mr-4" style="width: 33.33%;">
                        <form id="conditionProportionForm">
                            <div class="form-group">
                                <input type="text" name="condition" class="form-control" placeholder="Enter condition">
                            </div>
                            <button type="submit" class="btn btn-primary">Get Condition Proportion</button>
                        </form>
                    </div>
                    <div class="chart-container flex-grow-1" style="width: 66.66%;">
                        <div id="conditionProportionChart" style="width: 100%; height: 100%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

