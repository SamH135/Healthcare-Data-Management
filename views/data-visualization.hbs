<h1>Data Visualization</h1>

<div>
    <h2>Single Patient Data</h2>
    <form id="patientDataForm">
        <input type="text" name="patientName" placeholder="Enter patient name">
        <button type="submit">Get Patient Data</button>
    </form>
    <table id="patientDataTable">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Patient ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Condition</th>
            </tr>
        </thead>
        <tbody>
            <!-- Patient data will be dynamically populated here -->
        </tbody>
    </table>
</div>

<div>
    <h2>Condition Proportion</h2>
    <form id="conditionProportionForm">
        <input type="text" name="condition" placeholder="Enter condition">
        <button type="submit">Get Condition Proportion</button>
    </form>
    <div id="conditionProportionChart">
        <!-- Pie chart will be dynamically rendered here -->
    </div>
</div>

<div>
    <h2>Condition by Age Group</h2>
    <form id="conditionByAgeGroupForm">
        <input type="text" name="condition" placeholder="Enter condition">
        <button type="submit">Get Condition by Age Group</button>
    </form>
    <div id="conditionByAgeGroupChart">
        <!-- Bar plot will be dynamically rendered here -->
    </div>
</div>

<script src="https://d3js.org/d3.v6.min.js"></script>
<script src="/js/data-visualization.js"></script>